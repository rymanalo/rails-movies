<%= render 'movie/form' %>

<div class="details_page">
<h2> <%= @result["Title"] %> 
(<%= @result["Year"] %>) </h2>

<div class="poster">
<% if @result["Poster"] == "N/A" %>
<img src="poster-not-found.jpg">
<% else %>
<img src="<%= @result["Poster"] %>" alt="Movie poster for <%= @result["Title"] %>" >
<% end %>
</div>


<div class="details">
<p>
  <%= @result["Plot"]%>
</p>

<dl>
  <dt>
    Rating
  </dt>
  <dd>
    <%= @result["Rated"] %>
  </dd>
  <dt>
    Runtime
  </dt>
  <dd>
    <%= @result["Runtime"] %>
  </dd>
    <dt>
    Genre
  </dt>
  <dd>
    <%= @result["Genre"] %>
  </dd>
    <dt>
    IMDB Rating
  </dt>
  <dd>
    <%= "*" * @result["imdbRating"].to_f.round  %>
  </dd>
  <dt>
    Rotten Tomatoes Rating
  </dt>
  <dd>
    <%= "*" * @result["tomatoRating"].to_f.round %>
  </dd>
    <dt>
      <%= "Actor" if @actors.size == 1%>
      <%= "Actors" if @actors.size > 1%>
  </dt>
  <dd>
    <ul>
      <% @actors.each do |actor| %>
      <li><%= actor %> </li>
      <% end %>
    </ul>
  </dd>
    <dt>
      <%= "Director" if @directors.size == 1%>
      <%= "Directors" if @directors.size > 1%>
  </dt>
  <dd>
    <ul>
      <% @directors.each do |director| %>
      <li><%= director %> </li>
      <% end %>
    </ul>
  </dd>
</dl>
</div>

<br>
<a href="/search?q=<%= @query %>"> Back to search results for <%= @query %> </a>

</div>