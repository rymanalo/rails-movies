<div class="search">

<%= render 'movie/form' %>

<h2>
  <% if @results.nil?%>
  No search results found
  <% else %>
  Search results
  <% end %>
  for <q><%= @query %></q>
</h2>
<% if !@results.nil? %>

  <% @results.each do |result| %>
    <p>
      <a href="/movies?id=<%= result["imdbID"] %>&amp;q=<%= URI.escape(@query) %>"><%= result["Title"] %></a>
      (<%= result["Year"]%>)
    </p>
  <% end %>

<% end %>
</div>